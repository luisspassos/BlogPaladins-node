<style>

header {
    margin: 40px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-weight: bold;
}

header > div {
    display: flex;
    align-items: center;
}

header > div > a {
    text-decoration-line: none;
    display: flex;
    align-items: center;
}

header > div > a > p  {
    padding-left: 15px;
    font-size: 1.3em;
    line-height: 1.7em;
    color: var(--BLUE-TERTIARY);
}

header > div > a > p > strong {
    background-color: var(--BLUE-PRIMARY);
    color: white;
    padding: 5px;
    border-radius: 10px;
    margin-left: 5px;
}

.img-header {
    max-width: 70px;
}

.hamburgerMenu {
    display: none;
}

.hamburgerMenu > i {
    transition: .5s;
}

header > nav {
    position: relative;
}

header > nav > a {
    text-decoration-line: none;
    padding-left: 15px;
    color: var(--BLUE-TERTIARY);
}

header > nav > a:hover {
    text-decoration-color: var(--BLUE-TERTIARY);
    text-decoration-line: underline;
}

header > nav > a > i:hover {
    color: var(--BLUE-PRIMARY);
}

.menu {
    position: fixed;
    background: rgba(0, 0, 0, 0.5);
    right: 0;
    top: 0;
    z-index: -1;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: flex-end;
    opacity: 0;
}

.menu > nav {
    background: white;
    display: inline-block;
    height: 100%;
    padding-top: 10px;
    box-shadow: var(--SHADOW-PRIMARY);
    transform: translateX(100%);
    transition: .5s;
}

.menu p {
    font-size: 1.5em;
    cursor: pointer;
    padding: 5px 21px;
}

.menu p:hover {
    background: var(--GRAY-SECONDARY);
}

.menu a,
.menu {
    color: var(--BLUE-SECONDARY);
    text-decoration: none;
}

.menu > nav > figure {
    width: 28px;
    height: 28px;
    cursor: pointer;
    display: flex;
    align-items: center;
    margin: 5px 0 5px 15px;
    justify-content: center;
}

.menu > nav > figure > img {
    width: 16px;
}

.menu > nav > figure:hover > img {
    transform: scale(1.1);
}

.search {
    position: absolute;
    right: 0;
    top: 35px;
}

.search > input {
    width: 310px;
    font-size: 1.4em;
    border: 0;
    outline: 0;
}

.search > hr {
    border: 0;
    width: 100%;
    height: 3px;
}

.search > hr:nth-of-type(1) {
    background: var(--GRAY-SECONDARY);
}

.search > hr:nth-of-type(2) {
    background: var(--BLUE-PRIMARY);
}

.search> input::-webkit-search-cancel-button {
    display: none;
}

@media screen and (max-width: 782px) {
    
    header > nav {
        display: none;
    }

    .hamburgerMenu {
        display: block;
        font-size: 2.7em;
        cursor: pointer;
        color: var(--BLUE-TERTIARY);
    }
}

@media screen and (max-width: 460px){
    
    header {
        align-items: flex-start;
        flex-direction: column-reverse;
    }

    .hamburgerMenu {
        margin-bottom: 15px;
    }
}

@media (max-width: 347px) {
    header {
        margin: 40px 25px;
    }
}

</style>