<script>
    
    const [sliderPrev, sliderNext] = document.querySelectorAll(".slider button");
    const sliderImgs = document.querySelectorAll(".imgsSlider > li > img");
    const slider = document.querySelector(".imgsSlider");

    //slider

    let sliderIndex = 0;

    const sliderTranslateX = ()=> `translateX(${-sliderIndex * 100}%)`;

    function carouselNext() {
        sliderIndex++;
        
        if(sliderIndex > sliderImgs.length - 1) {
            sliderIndex = 0;
        }

        slider.style.transform = sliderTranslateX()
    }

    function carouselPrev() {
        sliderIndex--;
        
        if(sliderIndex < 0) {
            sliderIndex = sliderImgs.length - 1;
            slider.style.transform = sliderTranslateX()
            return
        }

        slider.style.transform = sliderTranslateX()
    }

    sliderNext.addEventListener("click", carouselNext)
    sliderPrev.addEventListener("click", carouselPrev)

    // Posts

    function goToPost(ref) {
        location = `/post?${ref}`
    }
    
</script>